<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:layout_weight="1">
    	
        <ImageView 
        	android:src="@drawable/solar" 
        	android:id="@+id/img_solar"
        	style="@style/ImageLauncher" />
        	        	
        <ImageView 
        	android:src="@drawable/heatpump" 
        	android:id="@+id/img_heatpump"
        	style="@style/ImageLauncher" />
        	
        <ImageView 
        	android:src="@drawable/biomassboiler" 
        	android:id="@+id/img_biomass" 
        	style="@style/ImageLauncher" />
        	
    </LinearLayout>
    
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:layout_weight="1">
        	
        <ImageView 
        	android:src="@drawable/gas_boiler" 
        	android:id="@+id/img_gasboiler" 
        	style="@style/ImageLauncher" />
        	
        <ImageView 
        	android:src="@drawable/heat_transfer" 
        	android:id="@+id/img_heattransfer" 
        	style="@style/ImageLauncher" />
        	
        <ImageView 
        	android:src="@drawable/about" 
        	android:id="@+id/img_about" 
        	style="@style/ImageLauncher" />
    </LinearLayout>
</LinearLayout>
