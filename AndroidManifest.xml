<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.gmit.energyapp"
      android:versionCode="1"
      android:versionName="1.0"
      android:installLocation="auto">
      
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:icon="@drawable/icon" 
    			 android:label="@string/app_name" 
    			 android:name=".EnergyApplication" >
    			 
        <activity android:name=".SplashActivity" 
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".HomeActivity"
            	  android:label="@string/app_name"
            	  android:theme="@android:style/Theme.Light"
            	  android:screenOrientation="landscape" />
            	  
       	<activity android:name=".MechanicalEngineeringDepartmentWebView" 
       			  android:label="@string/app_name" />
		
		<activity android:name=".LauncherActivity"
            	  android:label="@string/app_name"
            	  android:theme="@android:style/Theme.Light"
            	  android:screenOrientation="landscape" />
       	
       	<activity android:name=".SolarActivity"
       			  android:label="@string/solar_activity"
       			  android:theme="@android:style/Theme.Light"
       			  android:screenOrientation="landscape" />
       			  
       	<activity android:name=".SolarOverviewActivity"
       			  android:label="@string/solar_overview_activity"
       			  android:theme="@android:style/Theme.Light"
       			  android:screenOrientation="landscape" />
     	
     	<activity android:name=".HeatPumpActivity"
       			  android:label="@string/heatpump_activity"
       			  android:theme="@android:style/Theme.Light"
       			  android:screenOrientation="landscape" />
      	
      	<activity android:name=".BiomassActivity"
       			  android:label="@string/biomass_activity"
       			  android:theme="@android:style/Theme.Light"
       			  android:screenOrientation="landscape" />
     	
     	<activity android:name=".GasBoilerActivity"
       			  android:label="@string/gasboiler_activity"
       			  android:theme="@android:style/Theme.Light"
       			  android:screenOrientation="landscape" />
       			  
      	<activity android:name=".HeatTransferActivity"
       			  android:label="@string/heattransfer_activity"
       			  android:theme="@android:style/Theme.Light"
       			  android:screenOrientation="landscape" />
      	
      	<activity android:name=".AboutActivity"
       			  android:label="@string/about_activity"
       			  android:theme="@android:style/Theme.Light"
       			  android:screenOrientation="landscape" />
       			  
       	<activity android:name=".PreferenceActivity"
       			  android:label="@string/preference_activity"
       			  android:theme="@android:style/Theme.Light" 
       			  android:screenOrientation="landscape" />
       			  
      	<activity android:name=".YouTubeActivity" />
            		  
    </application>
</manifest>